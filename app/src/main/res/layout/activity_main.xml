<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.amk.cybrchat.MainActivity">

    <EditText
        android:id="@+id/entPassword"
        android:layout_width="363dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/entUsername"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        tools:layout_editor_absoluteX="11dp"
        tools:layout_editor_absoluteY="108dp" />

    <EditText
        android:id="@+id/entUsername"
        android:layout_width="361dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/entPassword"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/entPassword"
        android:ems="10"
        android:hint="Username"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="12dp"
        tools:layout_editor_absoluteY="62dp" />

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="383dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/entPassword"
        android:text="Login"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="161dp" />

    <TextView
        android:id="@+id/tvRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnLogin"
        android:layout_centerHorizontal="true"
        android:text="Register" />
</RelativeLayout>
